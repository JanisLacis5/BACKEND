<%- include("header") -%>
<header class="box" id="heading">
    <h1><%= listTitle %></h1>
</header>

<main class="box">
    <% for (let i = 0; i < newItems.length; i++) { %>
    <div class="item">
        <input type="checkbox" />
        <p><%= newItems[i] %></p>
    </div>
    <% } %>
    <form class="item" action="/" method="post">
        <input
            type="text"
            name="newItem"
            placeholder="New Item"
            autocomplete="off" />
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
        <%- include("footer") -%>


